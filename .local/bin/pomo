#!/bin/sh
#
MODE=$(gum choose "work" "break")
echo "Choose the time in minutes"
TIME=$(gum choose 10 30 60 90 120)

if [ "$MODE" = "work" ]; then
  MSG="Finished ${TIME} Minutes of work good job!"
else
  MSG="Finished ${TIME} Minutes of break time to start again!"
fi

pomodoro () {
  timer ${TIME}m
  notify-send Pomodoro "$MSG"
  mpg123 ~/Downloads/notification.mp3
  # echo "Start again?"
  # STARTAGAIN=$(gum choose "yes" "no")

  # [ "$STARTAGAIN" == "yes" ] && pomo || echo "invalid"
}

pomodoro
